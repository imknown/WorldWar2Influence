<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:foo="http://schemas.android.com/apk/res/com.dengdeng123.blowupplane"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/store_coin_lstv_item"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center" >

        <ImageView
            android:id="@+id/store_coin_lstv_item_img_imgv"
            android:layout_width="60dip"
            android:layout_height="60dip"
            android:contentDescription="@null"
            android:paddingTop="5dip"
            android:scaleType="centerInside"
            android:src="@drawable/store_coin" />
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_vertical"
        android:padding="10dip" >

        <com.dengdeng123.blowupplane.widget.TextViewPlus
            android:id="@+id/store_coin_lstv_item_how_many_coins_txtv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:text="@string/how_many_coins"
            android:textColor="@android:color/white"
            android:textSize="@dimen/default_txt_size"
            foo:customFont="yansong.otf" />

        <com.dengdeng123.blowupplane.widget.TextViewPlus
            android:id="@+id/store_coin_lstv_item_how_much_rmb_txtv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:text="@string/how_much_rmb"
            android:textColor="@color/button_bg_color"
            android:textSize="@dimen/default_txt_size"
            foo:customFont="yansong.otf"
            tools:ignore="RelativeOverlap" />
    </RelativeLayout>

</LinearLayout>
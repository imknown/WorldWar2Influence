<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent" android:gravity="center_vertical"
    android:orientation="horizontal" >

    <ImageView
        android:id="@+id/shoot_type_imgv"
        android:layout_width="70dip"
        android:layout_height="wrap_content"
        android:background="@null"
        android:contentDescription="@null"
        android:scaleType="centerInside"
        android:src="@drawable/twinkling_bullet_white" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@null"
        android:gravity="center_vertical" >

        <ImageView
            android:id="@+id/shoot_type_bullet_imgv"
            android:layout_width="@dimen/shoot_type_chooser_img_size"
            android:layout_height="@dimen/shoot_type_chooser_img_size"
            android:layout_marginRight="@dimen/border_default"
            android:contentDescription="@null"
            android:src="@drawable/twinkling_bullet_white" />

        <ImageView
            android:id="@+id/shoot_type_bomb_imgv"
            android:layout_width="@dimen/shoot_type_chooser_img_size"
            android:layout_height="@dimen/shoot_type_chooser_img_size"
            android:contentDescription="@null"
            android:src="@drawable/twinkling_bomb_white" />
    </LinearLayout>

</LinearLayout>